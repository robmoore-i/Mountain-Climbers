<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/darkTextGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">40dp</item>
        <item name="colorButtonNormal">@color/mountainGrey</item>
    </style>

    <style name="SwitchSetting" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/darkTextBlue</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkTextGrey</item>
        <item name="android:backgroundTint">@color/darkTextGrey</item>
    </style>

    <style name="speedSelectImage">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/darkTextGrey</item>
    </style>

</resources>
